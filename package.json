{
  "name": "@aloha/utils",
  "version": "0.1.0",
  "description": "Modern, ESM-first utility functions for the aloha ecosystem and frontend applications",
  "type": "module",
  "sideEffects": false,

  "files": [
    "dist"
  ],

  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },

  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",

  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "prepublishOnly": "npm run clean && npm run build"
  },

  "keywords": [
    "utils",
    "helpers",
    "esm",
    "typescript",
    "frontend",
    "aloha",
    "accessibility"
  ],

  "author": {
    "name": "Ilia Brykin",
    "email": "brykin.ilia@gmail.com"
  },
  "license": "MIT",

  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@stylistic/eslint-plugin": "^5.7.1",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "eslint-plugin-import-group": "^2.0.2",
    "eslint-plugin-jest": "^29.12.1",
    "globals": "^17.1.0",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3"
  }
}
